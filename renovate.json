{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:all",
    ":dependencyDashboard"
  ],
  "packageRules": [
    {
      "groupName": "kotlin",
      "matchPackageNames": [
        "/androidx.compose.compiler:compiler/",
        "/org.jetbrains.kotlin.*/",
        "/com.google.devtools.ksp/",
        "/androidx.compose.compiler/"
      ]
    },
    {
      "groupName": "nordic",
      "matchPackageNames": [
        "/no.nordicsemi.*/"
      ]
    }
  ]
}
